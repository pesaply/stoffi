$color2: lighten(#005293, 20%);

/* slideshow */
.slideshow
{
	margin: 10px auto;
	height: 140px;
	padding: 5px;

	.slide
	{
		position: absolute;
		text-align: left;
		width: 900px;
	
		h1
		{
			margin: 0px;
			padding: 0px;
			vertical-align: top;
			color: rgba(0,0,0,0.5);
			text-shadow: 1px 1px 1px rgba(255,255,255,0.2);
		}
		
		.image
		{
			background-color: rgba(0,0,0,0.1);
			float: left;
			width: 500px;
			margin: -5px 10px -5px -5px;
			background-repeat: no-repeat;
			height: 150px;
			cursor: pointer;
		}
		
		.controls
		{
			width: 405px;
			height: 20px;
			line-height: 15px;
			font-size: 10pt;
			display: inline-block;
			position: relative;
			bottom: 16px;
			left: 495px;
			padding-left: 5px;
			a
			{
				display: inline-block;
				padding: 0px 5px 5px;
				color: rgba(0,0,0,0.1);
				text-shadow: 1px 1px 1px rgba(255,255,255,0.1);
				&:hover
				{
					color: rgba(0,0,0,0.3);
					text-decoration: none;
				}
				
				&.active
				{
					color: rgba(0,0,0,0.6);
					&:hover { color: rgba(0,0,0,0.6); }
				}
				
				&.more
				{
					color: rgba(0,0,0,0.5);
					float: right;
					&:hover { color: rgba(0,0,0,0.7); }
				}
			}
		}
	}

	#slide0  { z-index: 0; }
	#slide1  { z-index: 1; }
	#slide7  { z-index: 2; }
	#slide3  { z-index: 3; }
	#slide4  { z-index: 4; }
	#slide5  { z-index: 5; }
	#slide6  { z-index: 6; }
	#slide2  { z-index: 7; }
	#slide8  { z-index: 8; }
	#slide9  { z-index: 9; }
	#slide10 { z-index: 10; }
	#slide11 { z-index: 11; }
	
	<% I18n.available_locales.each do |l| %>
		<% l = l.to_s %>
	
	.slide-youtube-<%=l%>      { .image { background-image: url(/assets/<%=l%>/slideshow/youtube.png); } }
	.slide-interface-<%=l%>    { .image { background-image: url(/assets/<%=l%>/slideshow/interface.png); } }
	.slide-playlists-<%=l%>    { .image { background-image: url(/assets/<%=l%>/slideshow/playlist_from_search.png); } }
	.slide-remote-<%=l%>       { .image { background-image: url(/assets/<%=l%>/slideshow/remote.png); } }
	.slide-formats-<%=l%>      { .image { background-image: url(/assets/<%=l%>/slideshow/formats.jpg); } }
	.slide-mind-reader-<%=l%>  { .image { background-image: url(/assets/<%=l%>/slideshow/mind_reader.png); } }
	.slide-charity-<%=l%>      { .image { background-image: url(/assets/<%=l%>/slideshow/save_the_world.png); } }
	.slide-social-<%=l%>       { .image { background-image: url(/assets/<%=l%>/slideshow/social.jpg); } }
	.slide-focus-<%=l%>        { .image { background-image: url(/assets/<%=l%>/slideshow/music_list.png); } }
	.slide-cloud-<%=l%>        { .image { background-image: url(/assets/<%=l%>/slideshow/cloud.png); } }
	.slide-bookmarks-<%=l%>    { .image { background-image: url(/assets/<%=l%>/slideshow/bookmarks.jpg); } }
	
	<% end %>
	
}

