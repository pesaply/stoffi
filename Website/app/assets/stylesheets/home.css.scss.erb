.quotes
{
	height: 200px;
	position: relative;
	.quote
	{
		position: absolute;
		display: inline-block;
		vertical-align: top;
		padding: 0;
		color: rgba(0,0,0,0.3);
		text-shadow: 1px 1px 1px rgba(255,255,255,0.2);
		.quotemark
		{
			display: inline-block;
			vertical-align: top;
			font-size: 50px;
			margin-top: -5px;
			text-shadow: 1px 1px 1px rgba(255,255,255,0.3);
			font-family: 'IM Fell French Canon', serif;
		}
				
		a
		{
			color: rgba(0,0,0,0.3);
			&:hover
			{
				color: rgba(0,0,0,0.5);
				text-decoration: none;
				cursor: pointer;
			}
		}
		.text
		{
			display: inline-block;
			h1
			{
				text-transform: none;
				color: rgba(0,0,0,0.4);
				font-style: italic;
				margin: 0;
				font-size: 16pt;
			}
			h2
			{
				letter-spacing: 3px;
				margin: 0;
				font-size: 10pt;
				font-style: italic;
				padding-left: 50px;
			}
		}
	}
	
